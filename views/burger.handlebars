

 <div class="jumbotron text-center">
    <h2>Add A Burger Here:</h2>
    <form id="newBurger" class="button-size">
      <input type="text" name="burger">
      <button type="submit">New Burger</button>
    </form>
  </div>

<hr>
       
        
        <div id="error" class="text-center">
          
        </div>


        <div class="col-md-6 text-center notdevoured">
          <h3>Burgers:</h3>
           {{#each notDevoured}}

             <div class="row">
               <p>{{this.burger_name}}
               <button data-delburgerid="{{this.id}}" class="deleteBurg">Delete</button>
               <button data-putburgerid="{{this.id}}" class="updateBurg">Devour!</button></p>
             </div>

            {{/each}}
        </div>
        
         <div class="col-md-6 text-center devoured">
         <h3>Burgers Devoured:</h3>
          {{#each devoured}}
         
               <div class="row">
                 <p>{{this.burger_name}}</p>
               </div>

          {{/each}}
          </div>

          

           
       
      
       